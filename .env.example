# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=fraud_detection
POSTGRES_USER=fraud_user
POSTGRES_PASSWORD=fraud_password
DATABASE_URL=postgresql://fraud_user:fraud_password@postgres:5432/fraud_detection

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=kafka:29092
KAFKA_CONSUMER_GROUP_ID=fraud-detection
KAFKA_TOPIC_TRANSACTIONS=transactions
KAFKA_TOPIC_ENRICHED=enriched-transactions
KAFKA_TOPIC_DECISIONS=fraud-decisions
KAFKA_TOPIC_ALERTS=fraud-alerts

# Neo4j Configuration
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=fraud_password

# MinIO Configuration
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET_MODELS=models
MINIO_BUCKET_DATA=data

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false
API_SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET_KEY=your-jwt-secret-here-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Model Configuration
MODEL_REGISTRY_PATH=/app/models
DEFAULT_MODEL_VERSION=latest
MODEL_THRESHOLD=0.5
ENSEMBLE_WEIGHTS=[0.4, 0.3, 0.3]

# Feature Engineering
VELOCITY_WINDOW_MINUTES=60
VELOCITY_WINDOW_HOURS=24
VELOCITY_WINDOW_DAYS=7

# Monitoring
PROMETHEUS_PORT=8080
LOG_LEVEL=INFO
METRICS_ENABLED=true

# Environment
ENVIRONMENT=development
